@model Traffic.Models.trafficjob

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Traffic Job</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">            
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="job_name" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="job_name" class="form-control" />
                        <span asp-validation-for="job_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Journey Option</label>
                    <div class="col-md-10">
                        @Html.DropDownList("JourneyOption", ViewBag.JourneyOption as SelectList, "Select Form", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="target_url" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="target_url" class="form-control" />
                        <span asp-validation-for="target_url" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="search_term" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="search_term" class="form-control" />
                        <span asp-validation-for="search_term" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="search_engine" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="search_engine" class="form-control" asp-items="Html.GetEnumSelectList<trafficjob.SEARCH_ENGINE>()">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="search_engine" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="session_count" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="session_count" class="form-control" />
                        <span asp-validation-for="session_count" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Google Form URL</label>
                    <div class="col-md-10">
                        <input name="JourneyURL" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Form Fields</label>
                    <div class="col-md-10">
                        <input name="form_fields" class="form-control" placeholder="Example: Name:Username, Phone:TelephoneNumber, Email:EmailAddress" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10 col-lg-offset-2">
                        <input asp-for="group_id" value="@ViewBag.Parent" style="display:none;" />
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
